{
  "version": 2,
  "buildCommand": "./build.sh",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "boomboxd.settings",
    "DEBUG": "False"
  },
  "functions": {
    "api/index.py": {
      "includeFiles": "frontend/build/**"
    }
  }
} 